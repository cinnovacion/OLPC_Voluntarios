{% extends 'layout.twig' %}

{% set pageTitle = 'home' %}
{% block pageContent %}
<div class="container">
	<form action="{{ path('login') }}" class="form-signin" method="post" {{ form_enctype(loginform)}}>

		{{ form_errors(loginform) }}
		<h2 class="form-signin-heading">Please sign in</h2>
		{{ form_label(loginform.Nombre, 'Nombre', { 'label_attr': {'class': 'sr-only'} }) }}
		{{ form_widget(loginform.Nombre,{'attr':{'class': 'form-control','id':'nombre','placeholder':'Nombre'}}) }}
		{{ form_errors(loginform.Nombre) }}
		
		{{ form_label(loginform.contrasena, 'contrasena', { 'label_attr': {'class': 'sr-only'} }) }}
		{{ form_widget(loginform.contrasena,{'attr':{'class': 'form-control','id':'inputPassword','placeholder':'contrasena'}}) }}
		{{ form_errors(loginform.contrasena) }}
		<button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>

	{{ form_widget(loginform._token)}}
	</form>


</div>
{% endblock %}