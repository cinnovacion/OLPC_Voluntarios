{% extends 'layout.twig' %}
{% set pageTitle = 'Registro de entrada y salida' %}
{% block pageContent %}
<div class="container">


	<a href="{{path('logout')}}" class="btn btn-info btnNuevo" role="button"><span class="glyphicon glyphicon-triangle-left" aria-hidden="true"></span> Atras</a>


	<form action="{{ path('logger.log') }}" class="form-signin" method="post" id="form" {{ form_enctype(logform)}}>
		{{ form_errors(logform) }}
		<h2 class="form-signin-heading">Escanear o introducir su número de cédula</h2>
		{{ form_label(logform.barcode, 'Barcode', { 'label_attr': {'class': 'sr-only'}}) }}
		{{ form_widget(logform.barcode,{'attr':{'class': 'form-control barcode','id':'nombre','placeholder':'000-000000-0000X','autofocus':'autofocus','style':'margin-left:0;','autocomplete':'off'}}) }}
		<ul id="error" style="opacity: 0;"><li>El código no existe</li></ul>
		
		{{ form_errors(logform.barcode) }}
		<button class="btn btn-lg btn-primary btn-block" id="proceder" type="button">Proceder</button>
		{{ form_widget(logform._token)}}
		{{ form_row(logform._token) }}
		{{ form_rest(logform._token) }}
	</form>
	<div id="myNav" class="overlay" style="font-color:white;">
		<div class="overlay-content">
			<p id="line1"></p>
			<p id="line2"></p>
			<p id="line3"></p>
			<a href="javascript:void(0)" id='si' style='border: 1px solid white;opacity: 100;width: 10%;height: 100%;margin-right: 45%;margin-left: 45%;margin-top: 10px;'>Sí</a>
			<a href="javascript:void(0)" id='no' style='border: 1px solid white;opacity: 100;width: 10%;height: 100%;margin-right: 45%;margin-left: 45%;margin-top: 10px;'>No</a>
			<a href="javascript:void(0)" id='ok' style='border: 1px solid white;opacity: 100;width: 10%;height: 100%;margin-right: 45%;margin-left: 45%;margin-top: 10px;'>Listo</a>

		</div>
	</div>
</div>

<script type="text/javascript" src="{{ app.request.baseUrl }}/assets/js/jquery.js"></script>
<script type="text/javascript" src="{{ app.request.baseUrl }}/assets/js/log.js"></script>
{% endblock %}
