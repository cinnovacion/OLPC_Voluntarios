<script>
	function printPage() {
		document.getElementById("toRemove").style.opacity = 0;
		document.getElementById("toRemove").style.height = 0;		
		document.getElementById("down").style.position = "absolute";
		document.getElementById("down").style.bottom = "0";
		window.print();
		setTimeout(100)
