{% extends 'layout.twig' %}

{% set pageTitle = 'Detalle de voluntario' %}
{% block pageContent %}

<div class="col-md-12" style="height: 40px;">
	<a href="{{path('voluntarios.overview')}}" class="btn btn-info" role="button"> <span class="glyphicon glyphicon-triangle-left" aria-hidden="true"></span> Atras</a>
	<a href="{{ app.request.baseUrl}}/print/{{voluntario.idPersona}}/card" class="btn btn-info print" role="button"> <span class="glyphicon glyphicon-print" aria-hidden="true"></span> Imprimir carnet</a>
</div>
<div class="col-md-12">
	<a href="{{ app.request.baseUrl}}/print/{{voluntario.idPersona}}/page" class="btn btn-info print" role="button"> <span class="glyphicon glyphicon-print" aria-hidden="true"></span> Imprimir constancia</a>
</div>
<div class="col-md-12">
	<a href="{{ app.request.baseUrl}}/print/{{voluntario.idPersona}}/horas" class="btn btn-info print" role="button" style="
    margin-top: 8px;
"> <span class="glyphicon glyphicon-print" aria-hidden="true"></span> Imprimir horas</a>
</div>

<div class="col-md-12">
	<div class="col-md-6 column1">
		<p><b>Nombre completo:</b> {{voluntario.Nombre}}</p>
		<p><b>No. De Cédula:</b> {{voluntario.NoDeCedula}}</p>
		<p><b>Direccion de residencia:</b> {{voluntario.DireccionDeResidencia}}</p>
		<p><b>Correo electronico:</b> {{voluntario.CorreoElectronico}}</p>
		<p><b>Área: </b>
			{% if voluntario.Area == 1 %}
			CEDESL
			{%  elseif voluntario.Area == 2 %}
			Comunicación
			{% elseif voluntario.Area == 3 %}
			Mercadeo
			{% elseif voluntario.Area == 4 %}
			Área Educativa
			{% elseif voluntario.Area == 5 %}
			Programa de Voluntariado
			{% elseif voluntario.Area == 6 %}
			Monitoreo y Evaluación
			{% elseif voluntario.Area == 7 %}
			Soporte Técnico
			{% endif %}
		</p>
	</div>
	<div class="col-md-6 column2">

		<p><b>Teléfono:</b> {{voluntario.Telefono}}</p>
		<p><b>Institucion academica:</b> {{voluntario. InstitucionAcademica}}</p>
		<p><b>Carrera o curso:</b> {{voluntario.CarreraCurso}}</p>
		<p><b>Nivel:</b> 
		{% if voluntario.Nivel == 1 %}
			1er.año
		{% elseif voluntario.Nivel ==  2 %}
		2do.año
		{% elseif voluntario.Nivel ==  3 %}
		3er.año
		{% elseif voluntario.Nivel ==  4 %}
		4to.año
		{% elseif voluntario.Nivel ==  5 %}
		5to.año
		{% elseif voluntario.Nivel ==  99 %}
		Egresado
		{% endif %}
	</div>
	
</div>
{% if voluntario.Observaciones == null %}
<div class="col-md-12">
	<p class="frameWide"><b>Horas acumuladas:</b> {% if trabajaPara.Total == 0 %}0{% else %}{{trabajaPara.Total}}{% endif %} horas</p>
	<p class="frameWide"><b>Desde</b> {{voluntario.DiaInicio}} {% if lastInput %}<b> Hasta </b>{{lastInput.dia|date("d/m/Y")}}{% endif %}</p>
	{% if disponibilidad != null %}
	<div class="frame trabajaadeWide">
		<div class="col-md-3">
			<b>Horario:</b>
		</div>
		<div class="col-md-9">
			<ul style='padding-left: 10px'>
				{% for disp in disponibilidad %}
				<li>		
					{{ disp['dia']|capitalize}} desde 
					{{ disp['horaInicio'] }} hasta
					{{ disp['horaFinal'] }}
				</li>
				{% endfor %}
			</ul>
		</div>
	</div>

	{% endif %}
</div>
{% else %}
<div class="col-md-12">
	<div class="col-md-6 column1">
		<p><b>Observaciones: </b>{{ voluntario.Observaciones }}</p>
	</div>
	<div class="col-md-6 column2">
		<p class="frame"><b>Horas acumuladas:</b> {% if trabajaPara.Total == 0 %}0{% else %}{{trabajaPara.Total}}{% endif %} horas</p>
		<p class="frame"><b>Desde</b> {{voluntario.DiaInicio}} {% if lastInput %}<b> Hasta </b>{{lastInput.dia|date("d/m/Y")}}{% endif %}</p>
		{% if disponibilidad != null %}
		<div class="col-md-12 trabajaade">
			<div class="col-md-3" style="padding-left: 0">
				<b>Horario:</b>
			</div>
			<div class="col-md-9" style="padding-left: 0">
				<ul style="padding-left: 10px;">
					{% for disp in disponibilidad %}
					<li>		
						{{ disp['dia']|capitalize }} desde 
						{{ disp['horaInicio'] }} hasta
						{{ disp['horaFinal'] }}
					</li>
					{% endfor %}
				</ul>
			</div>
		</div>
		{% endif %}
	</div>
</div>
{% endif %}


<div class="col-md-12">

	<a href="{{ app.request.baseUrl}}/voluntarios/{{voluntario.idPersona}}/borrar" class="btn btn-danger edit pull-right"  style="
	margin-right: 10%;" onclick="return confirm('Estás seguro?');" role="button"> <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
	<a href="{{ app.request.baseUrl}}/voluntarios/{{voluntario.idPersona}}/edit" class="btn btn-info edit pull-right" role="button" style="margin-right: 15px;"> <span class="glyphicon glyphicon-cog" aria-hidden="true"></span></a>

</div>
<div class="workingTable col-md-12">
	<div class="col-md-2"></div>
	<div class="col-md-8">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Fecha</th>
					<th>Hora de entrada</th>
					<th>Hora de salida</th>
					<th>Total de horas</th>
					<th>Editar</th>
				</tr>
			</thead>
			<tbody>
				{% for ahoras in trabaja %}
				<tr>
					<td>{% if ahoras.dia != null %}{{ ahoras.dia|date("d/m/Y")}}{% else %}/{% endif %}</td>
					<td>{% if ahoras.horaInicio != null %}{{ahoras.horaInicio}}{% else %}/{% endif %}</td>
					<td>{% if ahoras.horaFinal != null %}{{ahoras.horaFinal}}{% else %}/{% endif %}</td>
					<td>{% if ahoras.tiempo != null %}{{ahoras.tiempo}} horas{% else %}/{% endif %}</td>
					<td>
					<a href="{{ app.request.baseUrl}}/voluntarios/editTime/{{ahoras.idTrabajar}}">
						<button type="button" class="btn btn-info btn-number">
							<span class="glyphicon glyphicon-cog"></span>
						</button>
						</a>
					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<div class="col-md-2">
	</div>
</div>
{% include 'Pagination/Pagination.twig' %}


{% endblock %}
